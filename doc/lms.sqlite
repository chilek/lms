/* -------------------------------------------------------- 
  Structure of table "usergroups" 
-------------------------------------------------------- */
DROP TABLE usergroups;
CREATE TABLE usergroups (
	id integer PRIMARY KEY, 
	name varchar(255) DEFAULT '' NOT NULL, 
	description text DEFAULT '' NOT NULL, 
	UNIQUE (name)
);


# dla libgadu i ekg --------------
LDFLAGS += -L/usr/lib
CFLAGS += -I/usr/src/ekg
LIBS = /usr/lib/libgadu.so
# --------------------------------

SOURCES = ggnotify.c
OBJECTS = ${SOURCES:.c=.o}

OUT = ggnotify.so

all: $(OUT)

$(OUT): ${OBJECTS}
	gcc -shared $(OBJECTS) -o $(OUT) $(LDFLAGS) $(LIBS)
	rm -rf $(OBJECTS)

clean:
	rm -rf $(OUT)

